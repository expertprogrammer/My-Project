<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/back_view">

            <com.superlight.kashingmerchant.utilities.CustomFontTextView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/font_awesome_back_icon"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                app:customFont="Fontawesome_Webfont.ttf"/>
            <com.superlight.kashingmerchant.utilities.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="7dp"
                android:text="Categories"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:customFont="HelveticaNeue_Medium.ttf" />

        </LinearLayout>

        <com.superlight.kashingmerchant.utilities.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Edit Category"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:customFont="HelveticaNeue_Medium.ttf"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/save_view">

            <com.superlight.kashingmerchant.utilities.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:customFont="HelveticaNeue_Medium.ttf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1d1d1"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EBEBF1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#EBEBF1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="#69737a"
                android:textSize="16sp"
                android:text="NAME"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d1d1d1"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#60BF9D"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="Double rooms"
                android:id="@+id/tv_category_name"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d1d1d1"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#EBEBF1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="#69737a"
                android:textSize="16sp"
                android:text="STYLE"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d1d1d1"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@color/whiteColor">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/color_view">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:text="Colour"/>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff0000"
                        android:id="@+id/iv_color"/>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/icon_view">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#000000"
                    android:textSize="17sp"
                    android:text="Icon"/>

                <com.superlight.kashingmerchant.utilities.CustomFontTextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="#000000"
                    android:textSize="28sp"
                    android:text="@string/font_awesome_users_icon"
                    android:gravity="center"
                    app:customFont="Fontawesome_Webfont.ttf"
                    android:id="@+id/tv_icon"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>