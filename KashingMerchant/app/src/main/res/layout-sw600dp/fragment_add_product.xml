<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/back_view">

            <com.superlight.kashingmerchant.utilities.CustomFontTextView
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="@string/font_awesome_back_icon"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                app:customFont="Fontawesome_Webfont.ttf"/>
            <com.superlight.kashingmerchant.utilities.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="7dp"
                android:text="Products"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"
                app:customFont="HelveticaNeue_Medium.ttf" />

        </LinearLayout>

        <com.superlight.kashingmerchant.utilities.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Product"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:customFont="HelveticaNeue_Medium.ttf"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1d1d1"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EBEBF1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#EBEBF1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="#69737a"
                    android:textSize="18sp"
                    android:text="PRODUCT INFORMATION"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/whiteColor"
                android:id="@+id/select_photo_view">

                <android.support.v7.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    app:cardCornerRadius="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/img_app_icon"
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_product"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:textColor="#d1d1d1"
                    android:textSize="18sp"
                    android:text="Choose product image"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:id="@+id/name_view">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#60BF9D"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="Beer"
                    android:id="@+id/tv_product_name"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/whiteColor"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:hint="Product description"
                    android:textColorHint="#d1d1d1"
                    android:id="@+id/et_description"
                    android:inputType="textAutoCorrect"
                    android:background="#00ffffff"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d1d1d1"
                android:layout_alignParentBottom="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:id="@+id/price_view">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="Price"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#60BF9D"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="$15.00"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_price"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:id="@+id/category_view">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="Categories"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#60BF9D"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="salads"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_category"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:id="@+id/vat_view">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="VAT"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#60BF9D"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="10.00%"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_vat"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#EBEBF1">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:id="@+id/add_variant_view">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="Add new variant" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#EBEBF1">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#ffffff"
                android:id="@+id/add_option_view">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="Add new variant" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#d1d1d1"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#EBEBF1"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>