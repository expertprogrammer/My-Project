<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccedf6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/img_splash"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="370dp"
                android:orientation="vertical"
                android:background="@drawable/custom_cardview"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/img_logo"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:background="#eeeeee">

                    <com.superlight.kashingmerchant.utilities.CustomFontTextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/font_awesome_user_icon"
                        android:textColor="#d1d1d1"
                        android:textSize="25sp"
                        app:customFont="Fontawesome_Webfont.ttf"/>

                    <com.superlight.kashingmerchant.utilities.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#69737a"
                        android:textSize="16sp"
                        android:inputType="textEmailAddress"
                        android:hint="Username"
                        android:textColorHint="#d1d1d1"
                        android:text="jonarrien"
                        android:background="#00ffffff"
                        app:edittextfont="fonts/HelveticaNeue_Medium.ttf"
                        app:edittextfontHint="fonts/HelveticaNeue_Medium.ttf"
                        android:id="@+id/et_username"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#eeeeee">

                    <com.superlight.kashingmerchant.utilities.CustomFontTextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/font_awesome_lock_icon"
                        android:textColor="#d1d1d1"
                        android:textSize="25sp"
                        app:customFont="Fontawesome_Webfont.ttf"/>

                    <com.superlight.kashingmerchant.utilities.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#69737a"
                        android:textSize="16sp"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:textColorHint="#d1d1d1"
                        android:text="anboto83"
                        android:background="#00ffffff"
                        app:edittextfont="fonts/HelveticaNeue_Medium.ttf"
                        app:edittextfontHint="fonts/HelveticaNeue_Medium.ttf"
                        android:id="@+id/et_password"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/custom_login_button"
                    android:id="@+id/login">

                    <com.superlight.kashingmerchant.utilities.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="16sp"
                        android:textColor="#fc6c36"
                        android:text="LOGIN"
                        app:customFont="HelveticaNeue_Medium.ttf"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/forgot_pass">
                    <com.superlight.kashingmerchant.utilities.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="14sp"
                        android:textColor="#a0adb1"
                        android:text="Forgot password?"
                        app:customFont="HelveticaNeue_Light.ttf"/>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/signup">
        <com.superlight.kashingmerchant.utilities.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#534236"
            android:textSize="20sp"
            android:text="Don't have an account? Sign Up"
            app:customFont="HelveticaNeue_Medium.ttf"/>
    </RelativeLayout>

</RelativeLayout>